<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.polsl.lab.szymonbotor.notemanager.controller.MainFXController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <TreeView fx:id="noteTree" prefHeight="400.0" prefWidth="30.0" GridPane.rowIndex="1" />
      <Label text="Recent notes" GridPane.halignment="CENTER" />
      <Label text="Content" GridPane.columnIndex="1" GridPane.halignment="CENTER" />
      <MenuButton fx:id="addButton" mnemonicParsing="false" text="Add" GridPane.halignment="CENTER" GridPane.rowIndex="2">
         <items>
            <MenuItem mnemonicParsing="false" onAction="#newNoteClicked" text="New" />
            <MenuItem mnemonicParsing="false" onAction="#openNoteClicked" text="Open" />
         </items>
      </MenuButton>
      <TextArea fx:id="noteContent" prefHeight="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
